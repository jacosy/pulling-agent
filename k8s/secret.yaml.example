# Example MongoDB secret
# IMPORTANT: Do not commit real credentials to git!
# This is just a template showing the expected structure.
#
# To create the secret with real credentials:
# kubectl create secret generic mongodb-secret \
#   --from-literal=uri='mongodb://username:password@mongodb-service:27017/dbname?authSource=admin'

apiVersion: v1
kind: Secret
metadata:
  name: mongodb-secret
  labels:
    app: pulling-agent
type: Opaque
stringData:
  # Replace with your actual MongoDB connection string
  # Format: mongodb://[username:password@]host[:port][/database][?options]
  uri: "mongodb://localhost:27017"

---
# For MongoDB Atlas or external MongoDB:
# uri: "mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority"
#
# For MongoDB with authentication:
# uri: "mongodb://username:password@mongodb-service:27017/dbname?authSource=admin"
#
# For MongoDB replica set:
# uri: "mongodb://mongodb-0.mongodb:27017,mongodb-1.mongodb:27017,mongodb-2.mongodb:27017/dbname?replicaSet=rs0"
